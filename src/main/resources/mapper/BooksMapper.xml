<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zzuli.mapper.BooksMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.zzuli.entity.Books">
        <id column="book_id" property="bookId" />
        <result column="title" property="title" />
        <result column="author" property="author" />
        <result column="publication_date" property="publicationDate" />
        <result column="isbn" property="isbn" />
        <result column="genre" property="genre" />
        <result column="language" property="language" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        book_id, title, author, publication_date, isbn, genre, language
    </sql>

</mapper>
